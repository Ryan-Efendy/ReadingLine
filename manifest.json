{
  "name": "ReadingLine",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Acts as a reading ruler helping to keep an eye on a line of text with a mouse",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Toggle Reading Line"
  },
  "permissions": [
    "<all_urls>"
  ],
  "background": {
    "persistent": false,
    "scripts": ["reading-line-bg.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "reading-line.css"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "reading-line.js"
      ]
    }
  ]

}